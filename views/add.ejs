<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white " >
        <h1 class="text-3xl" >Create a new post</h1>
        <hr class="opacity-10 mt-3" >

        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block w-1/3 px-3 py-2" type="file" name="postimage">
            <input class="block w-1/3 px-3 py-3 mt-2 text-black border-2 text-whiterounded-lg " type="text" placeholder="Title" name="title" />
            <textarea class="block w-1/3 h-40 text-black px-3 py-3 mt-2 border-2 rounded-lg " type="text" placeholder="Description" name="description"></textarea>
            <input class="block w-1/3 px-3 py-3 mt-2 bg-red-700 cursor-pointer rounded-lg " type="submit" value="Create Post">
        </form>
    </div>

