<% include ./partials/header.ejs %>

    <div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
        <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="image">
        </form>

        <div class="profdets flex flex-col items-center mt-5">

            <div class="relative">

                <span id="uploadicon" class="w-8 h-8 absolute right-0 bottom-0 rounded-full flex items-center justify-center bg-zinc-200 cursor-pointer">
                    <i class="text-zinc-700 ri-pencil-fill"></i>
                </span>

                <div class="w-32 h-32 bg-zinc-200 rounded-full">
                    <img class="w-full h-full object-cover rounded-full" src="/images/uploads/<%=user.profileImage %>" alt="">
                </div>
            </div>

                <h1 class="text-3xl font-semibold mt-3"><%= user.name %></h1>
                <h3 class="text-md"><%= user.username %></h3>
                <a href="/edit" class="mt-1 px-7 py-2 bg-zinc-700 rounded-full text-sm font-semibold">Edit</a>
                <a href="/add" class="px-10 py-2 rounded-lg bg-red-600 mt-2 text-sm font-semibold" >New Post</a>
        </div>

        <div class="cards flex flex-wrap gap-10 px-10 mt-10 ">
            <div>
                <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%=user?.posts[0]?.image %>" alt="">
                </div>
                <a href="/show/posts" class="inline-block text-xl font-semibold mt-2">Your Uploaded Pins</a>
                <h5 class="text-sm font-medium opacity-60"><%= user.posts.length %></h5>
            </div>
        </div>
    </div>

    <script>
        document.querySelector('#uploadicon').addEventListener('click', function(){
            document.querySelector('#uploadform input').click();
        })
        document.querySelector("#uploadform input").addEventListener("change",function(){
            document.querySelector("#uploadform").submit();
        })
    </script>

<% include ./partials/footer.ejs %> 